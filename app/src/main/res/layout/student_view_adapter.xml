<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="10dp"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/studImg"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/ic_course"
        android:layout_alignTop="@+id/studNameTx"
        android:layout_alignParentStart="true"
        android:layout_marginStart="13dp" />

    <TextView
        android:id="@+id/studNameTx"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:text="Title"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginStart="13dp"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/studImg" />

    <TextView
        android:id="@+id/studNumTx"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Description"
        android:textSize="16sp"
        android:layout_alignBottom="@+id/studImg"
        android:layout_alignStart="@+id/studNameTx" />

</RelativeLayout>